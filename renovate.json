{
  "extends": ["config:base"],
  "rebaseStalePrs": true,
  "packageRules": [
    {
      "paths": ["package.json"],
      "minor": {
        "groupName": "shared non-major dependencies",
        "groupSlug": "shared-minor-patch"
      }
    },
    {
      "paths": ["packages/**"],
      "minor": {
        "groupName": "package non-major dependencies",
        "groupSlug": "packages-minor-patch"
      }
    },
    {
      "packagePatterns": ["^@zendeskgarden/css"],
      "enabled": false
    }
  ],
  "reviewers": ["team:maintainers"],
  "schedule": ["every four weeks on Friday"]
}
