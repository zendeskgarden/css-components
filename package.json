{
  "private": true,
  "name": "@zendeskgarden/css-components",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "git clean -Xdf .",
    "format": "prettier-package-json --write && lerna run format --stream",
    "postinstall": "lerna bootstrap --stream",
    "prepare": "yarn build",
    "start": "lerna run watch --parallel --stream & live-server demo",
    "test": "lerna run test --stream",
    "test:publish": "lerna publish --conventional-commits --skip-git --skip-npm --loglevel=silly"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-conventional": "^5.2.3",
    "@zendesk/garden-stylelint-config": "^6.0.0",
    "caniuse-lite": "^1.0.30000783",
    "commitizen": "^2.9.6",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.15.0-beta.16",
    "lerna": "^2.5.1",
    "live-server": "^1.2.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "prettier-package-json": "^1.4.0",
    "stylelint": "^8.4.0",
    "stylelint-order": "^0.7.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && git add",
      "post-checkout": "if [[ $GIT_PARAMS == *1 ]]; then yarn; fi",
      "post-merge": "yarn",
      "pre-push": "lerna run test --since"
    }
  }
}
