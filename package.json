{
  "private": true,
  "name": "@zendeskgarden/css-components",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "format": "prettier-package-json --write && lerna run format --stream",
    "postinstall": "lerna bootstrap --stream",
    "lint": "eslint scripts/*.js && lerna run lint --stream",
    "new": "scripts/new.js",
    "prepare": "yarn build",
    "start": "lerna run watch --parallel --stream & live-server demo",
    "tag": "lerna publish --conventional-commits",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@zendesk/eslint-config-garden": "^4.0.0",
    "@zendesk/garden-stylelint-config": "^6.0.0",
    "@zendesk/garden-svg-icons": "^2.5.0",
    "babel-eslint": "^8.2.1",
    "caniuse-lite": "^1.0.30000792",
    "chalk": "^2.3.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.17.0",
    "gh-pages": "^1.1.0",
    "handlebars": "^4.0.11",
    "husky": "^0.15.0-rc.4",
    "klaw-sync": "^3.0.2",
    "lerna": "^2.8.0",
    "live-server": "^1.2.0",
    "ncp": "^2.0.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.0.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-input-range": "^4.0.0",
    "prettier-package-json": "^1.4.0",
    "rimraf": "^2.6.2",
    "stylelint": "^8.4.0",
    "stylelint-order": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --since && yarn format --since",
      "post-checkout": "if [[ $GIT_PARAMS == *1 ]]; then yarn --pure-lockfile; fi",
      "post-merge": "yarn --pure-lockfile",
      "pre-push": "yarn test --since"
    }
  }
}
