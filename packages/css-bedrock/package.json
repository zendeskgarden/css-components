{
  "name": "@zendesk/garden-css-bedrock",
  "version": "2.0.1",
  "repository": "zendeskgarden/css-bedrock",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://zdrepo.jfrog.io/zdrepo/api/npm/npm"
  },
  "main": "dist/index.css",
  "style": "src/index.css",
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "@zendesk/garden-css-variables": "^2.0.0",
    "@zendesk/garden-stylelint-config": "^5.0.0",
    "cssnano": "^3.10.0",
    "gh-pages": "^1.0.0",
    "live-server": "^1.2.0",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^7.10.1",
    "stylelint-order": "^0.4.4"
  },
  "scripts": {
    "build": "postcss src/index.css --output dist/index.css",
    "lint": "stylelint $(find src -name '*.css')",
    "nuke": "rm -rf node_modules package-lock.json",
    "publish-demo": "gh-pages -d demo",
    "rebuild": "npm run nuke && npm install && npm run build",
    "start": "npm run watch & live-server demo",
    "test": "npm run lint",
    "watch": "npm run build -- --watch"
  },
  "pre-commit": [
    "build",
    "test"
  ]
}
